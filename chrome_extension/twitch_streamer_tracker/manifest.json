{
  "manifest_version": 3,
  "name": "Twitch Streamer Tracker",
  "version": "0.0.1",
  "description": "An extention that tracks your favourite streamer that you are following.",
  "icons":
  {
    "16": "/images/16.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  },

  "action":
  {
    "default_icon":
    {
      "16": "/images/16.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    },
    "default_popup": "popup.html"
  },

  "background":
  {
    "service_worker": "background.js"
  },

  "permissions":
  ["storage", "activeTab", "scripting"]
}
